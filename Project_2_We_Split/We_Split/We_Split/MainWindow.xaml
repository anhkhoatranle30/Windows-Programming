                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border Style="{StaticResource borderDetailStyle}">
                        <TextBlock Text="CHI TIẾT CHUYẾN ĐI"
                                   FontSize="33"
                                   Foreground="Orange"
                                   FontStyle="Italic"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border Style="{StaticResource borderDetailStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="3*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <TextBlock FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Text="GIAI ĐOẠN" Foreground="White" FontSize="28" />
                            </Grid>
                            <Grid Grid.Row="1">
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="2">
                    <Border Style="{StaticResource borderDetailStyle}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="updateBtn" Width="50" Height="50" Margin="10" ToolTip="Cập nhật chuyến đi">
                                <Button.Background>
                                    <ImageBrush ImageSource="Images/update_img.png" />
                                </Button.Background>
                            </Button>
                            <Button x:Name="deleteBtn" Width="50" Height="50" Margin="10" ToolTip="Xóa chuyến đi">
                                <Button.Background>
                                    <ImageBrush ImageSource="Images/delete_img.png" />
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border Style="{StaticResource borderDetailStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="6*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Text="THÔNG TIN CƠ BẢN"
                                   Foreground="White" FontSize="28"
                                   FontWeight="DemiBold" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Border Grid.Column="0" Margin="8" CornerRadius="18">
                                        <Border.Background>
                                            <ImageBrush ImageSource="Images/Trips/1/1.jpg" />
                                        </Border.Background>
                                    </Border>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <StackPanel>
                                        <TextBlock Text="Du lịch sông đẹp vcl" Foreground="Orange"
                                           FontSize="21"
                                           FontWeight="DemiBold"
                                           Padding="6"
                                           TextWrapping="Wrap" Width="auto" />
                                        <StackPanel Orientation="Horizontal" Height="60">
                                            <Image Width="50" Height="50" Source="Images/location_img.png" HorizontalAlignment="Left" />
                                            <TextBlock Text="Sông quê em" Margin="3,0" HorizontalAlignment="Right" FontSize="21"
                                                   Foreground="White"
                                                   VerticalAlignment="Center" />
                                        </StackPanel>
                                        <TextBlock Text="Khắc Tây, Khúc Đạo, Giác Viễn" FontSize="21" Foreground="Gray"
                                               TextWrapping="WrapWithOverflow" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom">
                                        <Image Source="Images/member_img.png" Width="30" Height="30" />
                                        <TextBlock Text="3" FontSize="21" FontWeight="DemiBold" Foreground="White" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border Style="{StaticResource borderDetailStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="6*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Text="HÌNH ẢNH CHUYẾN ĐI"
                                   Foreground="White" FontSize="28"
                                   FontWeight="DemiBold" />
                            </Grid>
                            <Grid Grid.Row="1">
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border Style="{StaticResource borderDetailStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="6*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Text="BIỂU ĐỒ CHI TRẢ"
                                   Foreground="White" FontSize="28"
                                   FontWeight="DemiBold" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <lvc:PieChart Foreground="White" HoverPushOut="10" BorderThickness="0" LegendLocation="Bottom" Height="269">
                                    <lvc:PieChart.Series>
                                        <lvc:PieSeries Title="Hoang" Values="4" DataLabels="False"
                               LabelPoint="{Binding PointLabel}" />
                                        <lvc:PieSeries Title="Khoa" Values="8" DataLabels="False"
                               LabelPoint="{Binding PointLabel}" />
                                        <lvc:PieSeries Title="Nhi" Values="14" DataLabels="False"
                               LabelPoint="{Binding PointLabel}" />
                                        <lvc:PieSeries Title="Trang" Values="6" DataLabels="False"
                               LabelPoint="{Binding PointLabel}" />
                                    </lvc:PieChart.Series>
                                    <lvc:PieChart.DataTooltip>
                                        <lvc:DefaultTooltip Background="Black" />
                                    </lvc:PieChart.DataTooltip>
                                </lvc:PieChart>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border Style="{StaticResource borderDetailStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="6*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Text="BIỂU ĐỒ KHOẢN CHI"
                                   Foreground="White" FontSize="28"
                                   FontWeight="DemiBold" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <lvc:CartesianChart Foreground="White" Series="{Binding SeriesCollection}" LegendLocation="Bottom">
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Chi phí"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Khoản chi" Labels=""></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.DataTooltip>
                                        <lvc:DefaultTooltip Background="Black" />
                                    </lvc:CartesianChart.DataTooltip>
                                </lvc:CartesianChart>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="2">
                    <Border Style="{StaticResource borderDetailStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="6*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Text="TỔNG KẾT CHUYẾN ĐI"
                                   Foreground="White" FontSize="28"
                                   FontWeight="DemiBold" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="4*" />
                                    </Grid.RowDefinitions>
                                    <Grid>
                                        <Border Style="{StaticResource borderDetailStyle}"
                                                Background="#101010">
                                            <Grid>
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0">
                                                    <TextBlock Text="Tổng: "
                                               Foreground="White"
                                               FontSize="23" />
                                                    <TextBlock Text="Trung bình: "
                                               Foreground="White"
                                               FontSize="23" />
                                                </StackPanel>
                                                <Grid HorizontalAlignment="Right" Margin="10">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid>
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,5,-5">
                                                            <Grid Background="Green" Width="5" Margin="5" />
                                                            <TextBlock Text="Nhận lại" FontSize="13" Foreground="White"
                                                           VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                    <Grid Grid.Row="1">
                                                        <StackPanel Orientation="Horizontal" Margin="0,-5,5,0">
                                                            <Grid Background="Red" Width="5" Margin="5" />
                                                            <TextBlock Text="Trả thêm" FontSize="13" Foreground="White"
                                                           VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
